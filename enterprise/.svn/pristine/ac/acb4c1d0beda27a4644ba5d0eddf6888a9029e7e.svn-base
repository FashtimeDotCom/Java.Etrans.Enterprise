@charset "utf-8";
/* design by Andy(M) */

/* all */
/* * { padding: 0; margin: 0;border: 0; list-style:none; font-weight: inherit; font-style: inherit; outline:0;} */

body{font-size:12px; font-family: 微软雅黑, Arial, Helvetica, sans-serif; background:#F2F2F2;}

a img, :link img, :visited img {border:0;} 

img{ border:0;}

a{ text-decoration:none;}

.left{ float:left;}

.right{ float:right;}

.clear{ clear:both;}

p{margin-bottom:10px;}
table.form {
	width: 100%;
	border-collapse: collapse; /* 边框重叠 */
	text-align: center;
}

table.form th,table.form th {
	border: none;
	text-align: center;
	FONT-FAMILY: "微软雅黑";
	FONT-SIZE: 12px;
}

table.form  th {
	text-align: center;
	border-style: solid;
	border-width: 1px;
	border-color: #1D82D2;
	background-color: #f9f9f9;
	padding:0px 0px;
	height: 24px;
}

table.form tbody {
	background: #ffffff;
}

table.form tbody td {
	padding: 5px 10px;
	border: 1px solid #1D82D2;
	border-collapse: collapse;
}

table.form thead td {
	background: url(../images/tb_top.png);
	background-color: #FFFFFF;
}

tr.odd {
	background-color: #ffffff;
}

tr.tableRowEven,tr.even {
	background-color: #EDF3FF;
}

tr.visite {
	background-color: #CBA718;
}
