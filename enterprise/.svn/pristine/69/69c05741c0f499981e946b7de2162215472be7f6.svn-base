<meta name="viewport" content="width=device-width, initial-scale=1.0">
<!-- Bootstrap -->
<link href="/enterprise/js/bootstrap/css/bootstrap.min.css"
	rel="stylesheet" media="screen">
<style type="text/css">
.box .box-title .icon {
	float: right;
	width: 20px;
	height: 20px;
	top: 50%;
	margin-right: 5px;
	cursor: pointer;
	font-size: 14px;
}

.box .box-title {
	padding: 10px 15px 10px;
