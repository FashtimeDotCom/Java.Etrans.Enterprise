	width: 900px;
	height: 450px;
	left: 38%;
	/* CHANGE MARGINS TO ACCOMODATE THE NEW WIDTH (original = margin: -250px 0 0 -280px;) */
}

.container {
	margin-top: 20px;
}
</style>
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="span6 column ui-sortable">
				<div class="box well ">
					<h4 class="box-title">
