function initGrid(params,colModel){
	
	$("div").remove(".flexigrid");
	$("#gridBox").append('<table id="VehicleAlarmList" style="display: none"></table>');
	
	$("#VehicleAlarmList").flexigrid( {
		url : 'query/stat/findVehicleAlarmList.action',
		dataType : 'json',
		colModel : colModel,
		sortname : "id",//第一次加载数据时排序列
		sortorder : "asc",//第一次加载数据时排序类型
		params : params,
		usepager : true,//是否分页，默认为true。
		showTableToggleBtn : true,//是否显示收起/打开按钮,默认不显示。
		useRp : true,//是否可以动态设置每页显示的结果数，默认为false。
		rp : 8,//每页记录数，默认为10
		singleSelect:true,
		width : 'auto',//表格宽度
		height : getNormalHeight()-15//表格高度
	});
}

function initColModel(){
	
	var colModel = [ 
            		{
            			display : '车牌号码',//表头
            			name : 'registrationNO',//JSON数据中属性名
            			width : 100,// 得加上 要不IE报错
            			sortable : true,//此字段是否能排序
            			align : 'center'//对齐方式
            		},
            		{
            			display : '车牌颜色',//表头
            			name : 'RegistrationNOColor',//JSON数据中属性名
            			width : 100,// 得加上 要不IE报错
            			sortable : true,//此字段是否能排序
            			align : 'center'//对齐方式
            		},{
            			display : '所属单位',//表头
            			name : 'workUnitName',//JSON数据中属性名
            			width : 100,// 得加上 要不IE报错
            			sortable : true,//此字段是否能排序
            			align : 'center'//对齐方式
            		}];
	
	var alarmTypeNo = $("#alarmTypeSel").val();
	
	//显示所有报警类型为表头
	if(alarmTypeNo && alarmTypeNo != '-1'){
		
		var checkText = $("#alarmTypeSel").find("option:selected").text();
		colModel.push({
			display : checkText,
			name : 'AlarmName' + alarmTypeNo,
			width : 150,
			sortable : false,
			align : 'center'
		});
		
	}else{//显示选择中的报警类型为表头
		$("#alarmTypeSel option").each(function(i){
			var optionText = $(this).text();
			var optionVal = $(this).val();
			
			if(optionVal != '-1'){
				colModel.push({
					display : optionText,
	    			name : 'AlarmName' + optionVal,
	    			width : 150,
	    			sortable : false,
	    			align : 'center'
				});
			}
		});
	}
	if(alarmTypeNo && alarmTypeNo == '-1'){
		colModel.push({
			display : '其他报警',
			name : 'AlarmNameQT',
			width : 150,
			sortable : false,
			align : 'center'
		 });
	}
	
	colModel.push({
		display : '报警总数(次数)',
		name : 'AlarmSum',
		width : 150,
		sortable : false,
		align : 'center'
	 });
	colModel.push({
		display : '报警处理数(次数)',
		name : 'AlarmHandleSum',
		width : 150,
		sortable : false,
		align : 'center'
	 });
	
	return colModel;
}

